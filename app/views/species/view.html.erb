<div class="container">
  <h1><a href="/species">Wildlife Tracker</a></h1>
  <div class="row">
    <div class="col-md-4"> <!--left-->

      <h2><%= @species.name %>
        <form action="/species/<%= @species.id %>/delete" method="post">
            <input name="_method" type="hidden" value="delete">
            <button class="btn btn-danger btn-xs">Delete Species</button>
        </form>
      </h2>
      <h3>Sightings</h3>
      <ul>
        <% @species.locations.each do |sighting| %>
          <li><%= sighting.name %></li>
        <% end %>
      </ul>
    </div> <!--left-->
  </div> <!--row-->
</div>
