<div class="container">
  <h1>Wildlife Tracker</h1>

  <form action="/species/new" method="post" class="form-inline">
    <input type="text" class="form-control" name="name" placeholder="Add a Species">
    <button class="btn">Add</button>
  </form>

  <h2>Species</h2>
  <ul>
    <% @species.each do |species| %>
      <li><%= species.name %></li>
    <% end %>
  </ul>

</div>
